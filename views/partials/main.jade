md-card
    md-card-content
        md-content
            pre {{vm.searchPara}}
            form(name="inputForm" ng-submit="vm.post(inputForm)" novalidate)
                div(layout="row")
                    md-input-container(flex="20")
                        label Amount
                        input(required, name="amount", ng-model="vm.searchPara.amount", type="number", min="1")
                        div(ng-messages="inputForm.amount.$error")
                            div(ng-message="required") Du musst schon was eintragen, Junge.
                            div(ng-message="min") Die Zahl muss mindestens 1 sein.
                    md-input-container(flex="60")
                        label Suche
                        input(required, name="name", ng-model="vm.searchPara.name")
                        div(ng-messages="inputForm.name.$error")
                            div(ng-message="required") Du musst schon was eintragen, Junge.
                    md-input-container(flex="20")
                        label Unit
                        md-select(required, name="unit", ng-model="vm.searchPara.unit")
                            md-option(ng-repeat="unit in vm.unitList", value="{{unit.value}}") {{unit.name}}
                        div(ng-messages="inputForm.unit.$error")
                            div(ng-message="required") Du musst schon was eintragen, Junge.
                div(layout="row")
                    md-input-container
                        input(type="submit", class="md-block md-button md-raised md-primary" value="Ich finde das mal schnell")
            pre {{vm.result}}
            md-autocomplete(
                md-selected-item="ctrl.selectedItem",
                md-search-text-change="ctrl.searchTextChange(ctrl.searchText)",
                md-search-text="ctrl.searchText",
                md-selected-item-change="ctrl.selectedItemChange(item)",
                md-items="item in ctrl.querySearch(ctrl.searchText)",
                md-item-text="item.display",
                md-min-length="0",
            )